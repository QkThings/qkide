QMainWindow {
	background-color: #eee;
	border: 0;
}

QMainWindow::separator {
     background: #ddd;
     width: 5px; /* when vertical */
     height: 5px; /* when horizontal */
}

QMainWindow::separator:hover {
     background: #ccc;
}

QMenuBar {
	/*text-transform: uppercase;*/
	background: #444;
	color: white;
	border-bottom: 1px solid #666;
}

QMenuBar::item {
	spacing: 3px;
	padding: 2px 5px;
	background: #444;
	/*border-radius: 2px;*/
}

QMenuBar::item:selected {
    /*background: #4a79ad;*/
	background: #ff7f2a;
	color: white;
}

QMenuBar::item:pressed {
    background: #ff7f2a;
}

